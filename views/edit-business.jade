extends layout

block content
 
 section.container
  header.jumbotron.hero-spacer
    h1
      | Edit Your Businesses
      p Please Edit Your Business Details
    hr
    section.row
      section.col-lg-12
        h3  Business Information
      hr
    section.row
      img(src='#{business.businessLogoUrl}' class='col-md-4 col-lg-4')
      form.form-horizontal.col-md-12.col-lg-12(method='post', enctype='multipart/form-data')
        section.col-sm-12.col-md-6.col-lg-6
          .control-group
            label.control-label(for='business_name') Business Name
            .controls
              input#business_name.form-control(type='text', name='business_name', placeholder='Enter Your Business Name' value='#{business.businessName}' required)
          .control-group
            label.control-label(for='business_owner') Business Owner
            .controls
              input#business_owner.form-control(type='text', name='business_owner', placeholder='Enter Your Business Name' value='#{business.businessOwner}' required)
          .control-group
            label.control-label(for='business_description') Business Description
            .controls
              input#business_description.form-control(type='text', name='business_description', placeholder='Enter Your Business Description' value='#{business.businessDescription}' required)
          .control-group
            label.control-label(for='business_address') Business Address
            .controls
              input#business_address.form-control(type='text', name='business_address', placeholder='Enter Your Business Address' value='#{business.businessAddress}' required)
          .control-group
            label.control-label(for='business_phone') Business Phone Number
            .controls
              input#business_phone.form-control(type='tel', placeholder='Enter Your Phone Number', name='business_phone' value='#{business.businessPhoneNumber}' required pattern='[0-9]+' data-validation-pattern-message='Please enter a valid phone number ie. 17055855858')
        section.col-sm-12.col-md-6.col-lg-6
          .control-group
            label.control-label(for='business_logo') Business Logo
            .controls
              input#business_logo.form-control(type='file', name='business_logo', placeholder='Enter Your Business Logo' accept='image/*')
          .control-group
            label.control-label(for='business_email') Business Email Address
            .controls
              input#business_email.form-control(type='email', name='business_email', placeholder='Enter Your Business Email' value='#{business.businessEmail}' required)
          .control-group
            label.control-label(for='business_web') Business Website
            .controls
              input#business_web.form-control(type='text', name='business_web', placeholder='Enter Your Business Website' value='#{business.businessWebsite}' pattern='^(https?)://.*$' data-validation-pattern-message='Enter a valid url starts with http://, If you dont have a company website  just leve as http://')
          .control-group
            label.control-label(for='business_fb') Business Facebook
            .controls
              input#business_fb.form-control(type='text', name='business_fb', placeholder='Enter Your Business Facebook' value='#{business.businessSocialFB}' pattern='^(https?)://.*$' data-validation-pattern-message='enter a valid url starts with http://, If you dont have a facebook account  just leve as http://')
          .control-group
            label.control-label(for='business_web') Business Linkedin
            .controls
              input#business_web.form-control(type='text', name='business_li', placeholder='Enter Your Business Linkedin' value='#{business.businessSocialLI}' pattern='^(https?)://.*$' data-validation-pattern-message='enter a valid url starts with http://, , If you dont have a linkedin account  just leve as http://')
        section.col-sm-12.col-md-12.col-lg-12
          hr
          .control-group
            .controls 
              
              input(type='hidden', name='id', value='#{business._id}')
              input(type='hidden', name='image_url', value='#{business.businessLogoUrl}')
              button.btn.btn-large.btn-primary(type='submit') Save changes
              button.btn.btn-large(type='button' onclick='history.go(-1);') Cancel
              
